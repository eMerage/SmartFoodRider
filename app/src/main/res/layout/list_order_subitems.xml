<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/ll_perant_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativelayout_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <emerge.project.onmealrider.ui.font.OpenSansLight
                    android:id="@+id/openSansLight22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/openSansLight17"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/textView_quantity"
                    android:layout_toStartOf="@+id/textView_quantity"
                    android:textColor="@color/app_black"
                    android:text="Quantity : " />

                <emerge.project.onmealrider.ui.font.OpenSansLight
                    android:id="@+id/textView_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/openSansLight17"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/app_black" />


                <emerge.project.onmealrider.ui.font.OpenSansLight
                    android:id="@+id/textView_menu_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_menuName"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/openSansLight17"
                    android:layout_toRightOf="@+id/openSansLight17"
                    android:textColor="@color/app_black" />

                <emerge.project.onmealrider.ui.font.OpenSansLight
                    android:id="@+id/openSansLight17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/openSansLight10"
                    android:layout_alignStart="@+id/openSansLight10"
                    android:layout_below="@+id/textView_menuName"
                    android:textColor="@color/app_black"
                    android:text="Menu Size : " />

                <emerge.project.onmealrider.ui.font.OpenSansLight
                    android:id="@+id/textView_menuName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/openSansLight10"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toEndOf="@+id/openSansLight14"
                    android:layout_toRightOf="@+id/openSansLight14"
                    android:textColor="@color/app_black" />

                <emerge.project.onmealrider.ui.font.OpenSansLight
                    android:id="@+id/openSansLight14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/openSansLight10"
                    android:layout_alignStart="@+id/openSansLight10"
                    android:layout_below="@+id/openSansLight10"
                    android:text="Menu Name : "
                    android:textColor="@color/app_black" />

                <emerge.project.onmealrider.ui.font.OpenSansLight
                    android:id="@+id/textView_menu_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/openSansLight10"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toEndOf="@+id/openSansLight10"
                    android:layout_toRightOf="@+id/openSansLight10"
                    android:textColor="@color/app_black" />

                <emerge.project.onmealrider.ui.font.OpenSansLight
                    android:id="@+id/openSansLight10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Menu Number : "
                    android:textColor="@color/app_black" />
            </RelativeLayout>



        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>